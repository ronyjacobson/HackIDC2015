<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:facebook="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:background="#C00000"
        android:paddingBottom="5dp"
        android:paddingLeft="15dp"
        android:paddingRight="10dp"
        android:paddingTop="5dp"
        android:text="Connect"
        android:textColor="#FFFFFF" />

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="50dp"
        android:layout_marginTop="20dp"
        android:background="#0070C0"
        android:clickable="true"
        android:orientation="vertical" >

        <com.facebook.widget.LoginButton
            android:id="@+id/button_login_facebook"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            facebook:confirm_logout="false"
            facebook:fetch_user_info="true" 
            style="@style/FacebookLoginButton"
            android:text=""
            facebook:login_text=""
            facebook:logout_text="" 
            android:background="@android:color/transparent"/>

        <ImageView
            android:id="@+id/button_login_facebook_image"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_facebook" 
            android:layout_margin="5dp"/>
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_login_google_plus"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="50dp"
        android:layout_marginTop="30dp"
        android:background="#C20000"
        android:clickable="true"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/button_login_google_plus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_google_plus"
            android:layout_margin="5dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_login_twitter"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="50dp"
        android:layout_marginTop="30dp"
        android:background="#5B9BD5"
        android:clickable="true"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/button_login_twitter"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_twitter"
            android:layout_margin="5dp" />
    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/layout_login_linkedin"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_marginRight="50dp"
        android:layout_marginTop="30dp"
        android:background="#1F4E79"
        android:clickable="true"
        android:orientation="vertical" >

        <ImageView
            android:id="@+id/button_login_linkedin"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/ic_linkedin" 
            android:layout_margin="5dp"/>
    </RelativeLayout>

</LinearLayout>